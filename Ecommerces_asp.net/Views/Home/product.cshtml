@{
    Layout = "_Layout";
}
@model IEnumerable<Ecommerces_asp.net.Areas.Admin.Models.Product>





<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a asp-controller="Home" asp-action="Index"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
            <li class="active">Products</li>
        </ol>
    </div>
</div>
<!-- //breadcrumbs -->
<!--- products --->
<div class="products">
    <div class="container">
        <div class="col-md-4 products-left">
            <div class="categories">
                <h2>Categories</h2>
                <ul class="cate">
                    <li><a href="products.html"><i class="fa fa-arrow-right" aria-hidden="true"></i>Fruits And Vegetables</a></li>
                    <ul>
                        @foreach (var item in ViewBag.cate)
                        {
                            <li><a asp-action="product" asp-controller="Home" asp-route-id="@item.Id"><i class="fa fa-arrow-right" aria-hidden="true"></i>@item.NameVN</a></li>
                        }

                    </ul>

                </ul>
            </div>
        </div>
        <div class="col-md-8 products-right">

            <div class="agile_top_brands_grids">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 top_brand_left">
                        <div class="hover14 column">
                            <div class="agile_top_brand_left_grid">
                                <div class="agile_top_brand_left_grid_pos">
                                    <img src="~/template/images/offer.png" alt=" " class="img-responsive">
                                </div>
                                <div class="agile_top_brand_left_grid1">
                                    <figure>
                                        <div class="snipcart-item block">
                                            <div class="snipcart-thumb">
                                                <a asp-controller="Home" asp-action="detail" asp-route-id="@item.Id"><img title=" " alt=" " src="~/Admin/images/@item.Image"></a>
                                                <p>@item.Name</p>
                                                <h4>$@item.UnitPrice</h4>
                                            </div>
                                            <div class="snipcart-details top_brand_home_details">
                                                <a asp-controller="Cart" asp-action="buy" asp-route-id="@item.Id" class="btn btn-primary">Add To Cart</a>
                                        
                                            </div>
                                        </div>
                                    </figure>
                                </div>
                            </div>
                        </div>
                    </div>
                }


                <div class="clearfix"> </div>
            </div>

            <div class="clearfix"> </div>
        </div>

