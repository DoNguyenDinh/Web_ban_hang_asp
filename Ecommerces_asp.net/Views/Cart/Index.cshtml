@{
    Layout = "_Layout";
}
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1">
            <li><a asp-controller="Home" asp-action="Index"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
            <li class="active">Checkout Page</li>
        </ol>
    </div>
</div>
<!-- //breadcrumbs -->
<!-- checkout -->
<div class="checkout">
    <div class="container">
        <h2>Your shopping cart contains: <span>3 Products</span></h2>
        <div class="checkout-right">
            <table class="timetable_sub">
                <thead>
                    <tr>
                        <th>SL No.</th>
                        <th>Product</th>
                        <th>Quality</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Remove</th>

                    </tr>
                </thead>
                @foreach (var item in ViewBag.cart)
                {


                    <tr class="rem1">
                        <td class="invert">1</td>
                        <td class="invert-image"><a href="single.html"><img src="~/Admin/images/@item.product.Image" alt=" " class="img-responsive" /></a></td>
                        <td class="invert">
                            <div class="quantity">
                                <div class="quantity-select">
                                    <div class="entry value-minus">&nbsp;</div>
                                    <div class="entry value"><span>@item.quantity</span></div>
                                    <div class="entry value-plus active">&nbsp;</div>
                                </div>
                            </div>
                        </td>
                        <td class="invert">@item.product.Name</td>

                        <td class="invert">$@item.product.UnitPrice</td>
                        
                        <td class="invert">
                            <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.product.Id">Remove</a>
                        </td> 
                    </tr>
                }
                </table>
               
        </div>
        <div class="checkout-left">
            <div class="checkout-left-basket">
                <h4>Continue to basket</h4>
                <ul>Product List:
                    @foreach (var item in ViewBag.cart)
                    {
                        <li>@item.product.Name</li>
                    }
                    <span>Total Price: $@ViewBag.total </span>
                 
                </ul>
            </div>
            <div class="checkout-right-basket">
                <a asp-controller="Home" asp-action="Index" ><span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>Continue Shopping</a>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>